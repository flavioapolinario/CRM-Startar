<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <title>CRM</title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "scaffold" %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <h1>
      CRM
      <%= image_tag("ajax-loader.gif", :id => "loader", :style => "display: none") %>
    </h1>    
    <div id="header">
      <% if current_user %>
        <ul id="menu">
          <li><%= link_to "My Tasks", root_path %></li>
          <li><%= link_to "Customers", customers_url %></li>
          <li><%= link_to "Projects", projects_url %></li>
          <li><%= link_to "Tasks", tasks_url %></li>
          <li><%= link_to "Contracts", contracts_url %></li>
        </ul>
      <% end %>
      <div id="user_nav">
        <% if current_user %>
          <%= current_user.name %> |
          <%= link_to "Edit Profile", edit_user_path(:current) %> |
          <%= link_to "Logout", logout_path %>
        <% else %>
          <%= link_to "Register", new_user_path %> |
          <%= link_to "Login", login_path %>
        <% end %>
      </div>
    </div>
    <div id="contents">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      <%= yield %>
    </div>



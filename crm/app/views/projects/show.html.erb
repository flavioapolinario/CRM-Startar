<p>
  <b><%=t "Name"%></b>
  <%=h @project.name %>
</p>

<p>
  <b><%=t "Description"%></b>
  <%=h @project.description %>
</p>

<p>
  <b><%=t "Customer"%></b>
  <%=h @project.customer.name %>
</p>

<% unless @project.members.empty? %>
  <p>
    <b><%=t "Members"%></b>
  <ul>
    <% @project.members.each do |member| %>
      <li><%=h member.name %></li>
    <% end %>
  </ul>
  </p>
<% end %>
  
<%= link_to t("edit"), edit_project_path(@project) %> |

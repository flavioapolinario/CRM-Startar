<p>
  <b><%=t "Name"%></b>
  <%=h @customer.name %>
</p>
<p>
  <b><%=t "Description"%></b>
  <%=h @customer.description %>
</p>
<p>
  <b><%=t "Phone"%></b>
  <%=h @customer.phone %>
</p>
<p>
  <b><%=t "Rating"%></b>
  <%=h @customer.rating %>
</p>

<% unless @customer.projects.empty? %>
  <p>
    <b><%=t "Projects"%></b>
  <ul>
    <% @customer.projects.each do |project| %>
      <li>
        <%=h project.name %>
      </li>
    <% end %>
  </ul>
  </p>
<% end %>

<% unless @customer.contracts.empty? %>
  <p>
    <b><%=t "Contracts"%></b>
  <ul>
    <% @customer.contracts.each do |contract| %>
      <li><%=h contract.name %></li>
    <% end %>
  </ul>
  </p>
<% end %>

<%= link_to 'Edit', edit_customer_path(@customer) %> |<%= link_to 'Back', customers_path %>
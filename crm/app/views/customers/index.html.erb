<h1><%= t ".title" %></h1>

<table>
  <tr>
    <th><%=t "Name"%></th>
    <th><%=t "Description"%></th>
    <th><%=t "Phone"%></th>
    <th><%=t "Rating"%></th>
  </tr>

  <% @customers.each do |customer| %>
    <tr>
      <td><%=h customer.name %></td>
      <td><%=h customer.description %></td>
      <td><%=h customer.phone %></td>
      <td><%=h customer.rating %></td>
      <td><%= link_to t("show"), customer %></td>
      <td><%= link_to t("edit"), edit_customer_path(customer) %></td>
      <td><%= link_to t("destroy"), customer, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to t(".new"), new_customer_path %>
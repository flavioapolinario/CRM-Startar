<div class="edit" id="edit_form">
  <h2><%=t".title"%></h2>
  <div class="part">
    <%= error_messages_for :task %>
    <% form_remote_for(:task, :url => { :action => "save" }) do |f| %>
      <p>
        <b>
          <%= f.label I18n.t(:title, :scope=>"activerecord.attributes.task") %>
        </b><br />
        <%= f.text_field :title, :size => 25 %>
      </p>
      <p>
        <b>
          <%= f.label I18n.t(:description, :scope=>"activerecord.attributes.task") %>
        </b><br />
        <%= f.text_area :description, :cols => 25, :rows => 3 %>
      </p>
      <p>
        <b>
          <%= f.label I18n.t(:priority, :scope=>"activerecord.attributes.task") %>
        </b><br />
        <%= f.select :priority, Task::PRIORITY %>
      </p>
      <p>
        <b>
          <%= f.label I18n.t(:progress, :scope=>"activerecord.attributes.task") %>
        </b><br />
        <%= f.select :progress, (0..100).collect{|i| ["#{i}%", i] }.to_a %>
      </p>
      <p>
        <b>  
          <%= f.label I18n.t(:started_at, :scope=>"activerecord.attributes.task") %>
        </b><br />
        <%= f.date_select :started_at, :order =>
          [:day, :month, :year], :include_blank => true %>
      </p>
      <p>
        <b>
          <%= f.label I18n.t(:project_id, :scope=>"activerecord.attributes.task") %>
        </b><br />
        <%= f.select :project_id, @projects, :prompt => "Select..." %>
      </p>
      <p>
        <%= submit_tag t(".button") %>
      </p>
    <% end %>
  </div>
</div>
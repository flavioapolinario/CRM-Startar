<%if current_user%>
  <h1><%= t"MyTasks"%></h1>

  <%= render "edit" %>

  <div id="projects">
    <% @incomplete_tasks.group_by(&:project).each do |project, tasks| %>
      <%= render "project", :project => project, :tasks => tasks %>
    <% end %>
  </div>

  <div id="results" class="group">
    <h2><%= t".Completed_Tasks" %></h2>
    <ul id="completed_tasks">
      <% @completed_tasks.each do |task| %>
        <%= render "task", :task => task %>
      <% end %>
    </ul>
  </div>
  <%= drop_receiving_element("completed_tasks", :url => { :action =>"finish" }) %>

<%else%>
  <p>Bem Vindo</p>
<%end%>
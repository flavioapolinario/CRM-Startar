<% form_for(@task) do |f| %>
<%= f.error_messages %>
<p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
</p>
<p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
</p>
<p>
    <%= f.label :status %>
    <br/>
    <%= f.text_field :status %>
</p>
<p>
    <%= f.label :owner_id %>
    <br/>
    <%= f.select :owner_id, @users, :prompt => "Select.." %>
</p>
<p>
    <%= f.label :priority %>
    <br/>
    <%= f.text_field :priority %>
</p>
<p>
    <%= f.label :progress %>
    <br/>
    <%= f.text_field :progress %>
</p>
<p>
    <%= f.label :started_at %>
    <br/>
    <%= f.datetime_select :started_at %>
</p>
<p>
    <%= f.label :ended_at %>
    <br/>
    <%= f.datetime_select :ended_at %>
</p>
<p>
    <%= f.label :project_id %>
    <br/>
    <%= f.select :project_id, @projects, :prompt => "Select.." %>
</p>
<p>
    <%= f.submit 'Save' %>
</p>
<% end %>
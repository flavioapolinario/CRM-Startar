<% form_for(@task) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :status %>
    <br/>
    <%= f.select :status, Task::STATUS, :prompt => "Select.." %>
  </p>
  <p>
    <%= f.label :owner_id %>
    <br/>
    <%= f.select :owner_id, @users, :prompt => "Select.." %>
  </p>
  <p>
    <%= f.label :priority %>
    <br/>
    <%= f.select :priority, Task::PRIORITY, :prompt => "Select.." %>
  </p>
  <p>
    <%= f.label :progress %>
    <br/>
    <%= f.select :progress, (0..100).collect{|i| ["#{i}%", i] }.to_a %>
  </p>
  <p>
    <%= f.label :started_at %>
    <br/>

    <%= f.date_select(:started_at, :order => [:day, :month, :year], :prompt => "Select.." )%>
  </p>
  <p>
    <%= f.label :ended_at %>
    <br/>
    <%= f.date_select(:ended_at, :order => [:day, :month, :year], :prompt => "Select..") %>
  </p>
  <p>
    <%= f.label :project_id %>
    <br/>
    <%= f.select :project_id, @projects, :prompt => "Select.." %>
  </p>
  <p>
    <%= f.submit button %>
  </p>
<% end %>